          >
            <option value="1">üß† ‰∏ªËÖ¶ÂúñË≠ú</option>
            <option value="2">üíª BruV ÈñãÁôºÁ≠ÜË®ò</option>
            <option value="3">üìñ ÁßÅ‰∫∫Êó•Ë®ò</option>
            <option value="4">üè¢ ÂúòÈöäÂÖ±‰∫´Áü•Ë≠òÂ∫´</option>
          </select>
          
          <div class="graph-actions">
            <button class="action-btn edit" @click="handleEditGraph" title="Á∑®ËºØÂúñË≠ú">
              ‚úèÔ∏è
            </button>
            <button class="action-btn create" @click="handleCreateGraph" title="Êñ∞Â¢ûÂúñË≠ú">
              ‚ûï
            </button>
            <button class="action-btn delete" @click="handleDeleteGraph" title="Âà™Èô§ÂúñË≠ú">
              üóëÔ∏è
            </button>
          </div>
        </div>
        
        <!-- C. ÊêúÂ∞ãÊ°Ü -->
        <div class="nexus-search">
          <input 
            v-model="searchQuery"
            type="text"
            class="nexus-search-input"
            placeholder="Search nodes..."
            @keyup.enter="handleSearch"
          />
          <button v-if="searchQuery" class="search-clear" @click="clearSearch">‚úï</button>
        </div>
        
        <!-- C2. ÁØÄÈªûÂ±ïÁ§∫Ê®°ÂºèÂàáÊèõ (View Modes) -->
        <div class="view-mode-selector">
